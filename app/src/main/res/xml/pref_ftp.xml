<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:inputType="text"
        android:key="Ftp_Server"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Server IP" />

    <EditTextPreference
        android:capitalize="words"
        android:inputType="number"
        android:key="Ftp_Port"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Server Port" />

    <EditTextPreference
        android:capitalize="words"
        android:inputType="text"
        android:key="Ftp_Username"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="User Name" />

    <EditTextPreference
        android:capitalize="words"
        android:inputType="textPassword"
        android:key="Ftp_Password"
        android:maxLines="1"
        android:password="true"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Password" />

    <EditTextPreference
        android:capitalize="words"
        android:inputType="text"
        android:key="Ftp_DownloadPath"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="DownloadPath" />

    <EditTextPreference
        android:capitalize="words"
        android:inputType="text"
        android:key="Ftp_UploadPath"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="UploadPath" />

</PreferenceScreen>
