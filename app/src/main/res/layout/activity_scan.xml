<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_user_dialog_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="200dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="30dp"
    android:paddingTop="30dp">
    <LinearLayout
        android:background="#9D9D9D"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/LocationTxt"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">


        <EditText
            android:id="@+id/barcodeEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="BarCode"
            android:maxLines="1"
            android:minHeight="45dp"
            android:textColor="#000000"
            android:textColorLink="@android:color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:background="#5E7C8B"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:text="Barcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="45dp" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/barcodeTxt"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:text="ProductCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="45dp" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/productTxt"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:text="Description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="45dp" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/discriptionTxt"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:text="QtyInStock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="45dp" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/quantityTxt"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:text="Counted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="45dp" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/countTxt"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/scan"
            android:text="Scan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="scan_onClick_Event"/>

        <Button
            android:id="@+id/search"
            android:text="Search"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="search_onClick_Event"/>
    </LinearLayout>

 </LinearLayout>